<view
    class="
        cascade
        cascade-picker
        {{noborder ? '' : 'border'}}
    "
>
    <view class="label-box cascade-label"
        style="
            width: {{labelWidth}};
            color: {{changeLabelColor ? labelColor : ''}}
        "
    >
        {{label}}
    </view>
    <view class="box">
        <view
            s-for="item,index in range"
            class="
                picker-content
                cascade-content
                {{range.length - 1 <= index ? '' : 'border'}}
            "
            data-index="{{index}}"
            bind:tap="tap"
        >
            <picker
                class="picker-flex cascade-picker-content"
                data-index="{{index}}"
                data-range="{{item}}"
                mode="selector"
                value="{{value[index]}}"
                range="{{item}}"
                range-key="{{rangeKey}}"
                bind:change="selectorChange"
                disabled="{{!content[index - 1] && index !== 0 && disabled || index !== value.length && index !== 0 && !content[index]}}"
            >
                <view class="
                    date-value
                    {{!content[index] ? 'placeholder' : ''}}
                ">
                    {{!content[index] ? placeholder[index] : content[index]}}
                </view>
                <gov-icon
                    class="arrow-icon"
                    name="{{!content[index - 1] && index !== 0 && disabled ? 'ban-o' : 'arrow-right-o'}}"
                    color="#ccc"
                    size="32.609rpx"
                ></gov-icon>
            </picker>
        </view>
    </view>
</view>
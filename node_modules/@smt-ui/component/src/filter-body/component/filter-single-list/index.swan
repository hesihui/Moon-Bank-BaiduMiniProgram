<view class="filter-single-list filter-singlelist-class">
    <view
        s-for="opt, optIdx in options"
        class="select-item filter-singlelist-item-class {{optIdx !== options.length - 1 ? 'border' : ''}} {{opt.value === value ? 'selected' : ''}}"
        data-value="{{opt.value}}"
        data-key="{{opt[optionKey]}}"
        data-idx="{{optIdx}}"
        catch:tap="handleSelect"
        hover-class="list-hover"
        hover-stay-time="{{240}}"
    >
        <text class="text filter-singlelist-item-text-class" style="color: {{opt.value === value ? activeColor : fontColor}}">{{opt[optionKey]}}</text>
        <gov-icon
            class="icon-selected"
            name="checkmark-o"
            color="{{activeColor}}"
            size="39.86rpx"
        />
    </view>
</view>

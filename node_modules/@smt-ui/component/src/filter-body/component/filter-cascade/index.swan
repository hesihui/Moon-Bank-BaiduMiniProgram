<view class="filter-cascade filter-cascade-class {{currentOptions.length >= 3 ? 'three-columns' : ''}}"
>
    <scroll-view
        s-for="column, index in currentOptions"
        class="column filter-cascade-column-class {{'column-' + index}}"
        scroll-y
        key="{{column[index][optionKey] || column[index]}}"
        current-options="{{currentOptions}}"
    >
        <view
            s-for="item, idx in column"
            id="{{'item-idx-' + idx}}"
            class="{{'item-idx-' + idx}} filter-cascade-column-item-class"
            key="{{item[optionKey]}}"
        >
            <view class="item {{idx === column.length - 1 ? 'last': ''}} {{currentValue[index] === idx ? 'selected': ''}}"
                selected="{{idx === currentValue[index] || idx === lastValue[index]}}"
                current-value="{{currentValue}}"
                data-index="{{index}}"
                data-idx="{{idx}}"
                data-item="{{item}}"
                catch:tap="clkHdl"
                hover-class="list-hover-feedback"
                hover-stay-time="{{240}}"
            >
                <text class="item-text filter-cascade-column-item-text-class" style="color: {{currentValue[index] === idx ? activeColor : fontColor}}">{{item[optionKey]}}</text>
                <gov-icon
                    s-if="index === currentOptions.length - 1"
                    class="item-icon"
                    name="checkmark-o"
                    color="{{activeColor}}"
                    size="36.232rpx"
                />
            </view>
        </view>
    </scroll-view>
</view>

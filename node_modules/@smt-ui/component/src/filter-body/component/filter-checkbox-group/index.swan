<view class="filter-checkbox-group filter-checkbox-group-class">
    <view class="checkbox-group-wrap">
        <smt-checkbox-group
            s-if="isLoaded"
            check-box-class="check-box-class"
            checkbox-group-class="checkbox-group-class"
            bind:change="groupChange"
            option-key="{{optionKey || 'name'}}"
            options="{{options}}"
            column="{{column}}"
            item-style="{{currentItemStyle}}"
            value="{{currentValue}}"
            icon-style="{{iconSyle}}"
            active-text-color="{{activeTextColor}}"
            active-icon-color="{{activeIconColor}}"
            active-bg-color="{{activeBgColor}}"
        ></smt-checkbox-group>
    </view>
    <view class="submit-panel">
        <button
            class="btn reset"
            type="default"
            bindtap="resetHdl"
            disabled="{{!currentValue.length}}"
        >重置</button>
        <button
            class="btn submit"
            type="primary"
            bindtap="ensureHdl"
        >确定</button>
    </view>
</view>
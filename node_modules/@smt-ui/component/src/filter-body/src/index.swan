<view
    class="filter-mask {{filterIdx !== -1 ? 'show' : ''}}"
    s-if="filtersValue.length"
>
    <view s-for="selItem, optionsIdx in selections"
        class="select-list filter-body-class {{filterIdx === optionsIdx ? 'show' : ''}}"
        key="{{selItem.text}}"
        sel-item-slot="{{selItem.slot}}"
    >
        <filter-cascade
            class="filter-content"
            filter-cascade-class="filter-cascade-class"
            filter-cascade-column-class="filter-cascade-column-class"
            filter-cascade-column-item-class="filter-cascade-column-item-class"
            filter-cascade-column-item-text-class="filter-cascade-column-item-text-class"
            s-if="selItem.type === 'cascade'"
            key="{{selItem.value}}"
            show="{{filterIdx === optionsIdx}}"
            options="{{selItem.options}}"
            option-key="{{selItem.optionKey || 'text'}}"
            value="{{filtersValue[optionsIdx].value}}"
            active-color="{{activeColor}}"
            font-color="{{fontColor}}"
            bind:change="itemChange"
        ></filter-cascade>
        <filter-checkbox-group
            class="filter-content"
            filter-checkbox-group-class="filter-checkbox-group-class"
            checkbox-group-class="checkbox-group-class"
            check-box-class="check-box-class"
            s-elif="selItem.type === 'checkbox-group'"
            key="{{selItem.value}}"
            options="{{selItem.options}}"
            value="{{filtersValue[optionsIdx].value}}"
            option-key="{{selItem.optionKey || 'name'}}"
            show="{{filterIdx === optionsIdx}}"
            column="{{selItem.column}}"
            bind:change="itemChange"
            active-text-color="{{activeTextColor}}"
            active-icon-color="{{activeIconColor}}"
            active-inline-bg-color="{{activeInlineBgColor}}"
        ></filter-checkbox-group>
        <view class="filter-content" s-elif="selItem.slot">
            <slot name="{{selItem.slot}}"></slot>
        </view>
        <filter-single-list
            s-else
            class="filter-content"
            filter-singlelist-class="filter-singlelist-class"
            filter-singlelist-item-class="filter-singlelist-item-class"
            filter-singlelist-item-text-class="filter-singlelist-item-text-class"
            key="{{selItem.value}}"
            show="{{filterIdx === optionsIdx}}"
            options="{{selItem.options}}"
            option-key="{{selItem.optionKey || 'text'}}"
            value="{{filtersValue[optionsIdx].value}}"
            bind:change="itemChange"
            font-color="{{fontColor}}"
            active-color="{{activeColor}}"
        ></filter-single-list>
    </view>
</view>






<view class="captcha-container {{isIos ? '' : 'android'}} {{border ? 'smt-border-bottom-retain-inner' : ''}}">
    <view
        class="label-box smt-label {{inputErrMsg ? 'input-err' : ''}}"
        style="width: {{labelWidth}}"
    >{{label}}</view>
    <view class="input-box">
        <input class="ipt-area"
            placeholder-style="color: {{placeholderColor}}"
            placeholder="{{placeholder}}"
            value="{{value}}"
            type="{{type}}"
            name="{{inputName}}"
            confirm-type="{{confirmType}}"
            maxlength="{{maxlength}}"
            focus="{{focus}}"
            bindinput="trigger"
            bindblur="trigger"
            bindfocus="trigger"
            bindconfirm="trigger"
        />
    </view>
    <view class="code-box smt-code smt-flex-center-box {{codeStatus}}" bindtap="refreshImg">
        <image
            s-if="{{verifyImgUrlData}}"
            class="code-img"
            src="{{verifyImgUrlData}}"
            binderror="imgErr"
        ></image>
        <view class="{{codeStatus}}" s-if="{{codeStatus !== 'loaded'}}">
            <slot name="{{codeStatus}}">
                <image class="icon" src="./../images/{{codeStatus}}.png"></image>
            </slot>
        </view>
    </view>
</view>
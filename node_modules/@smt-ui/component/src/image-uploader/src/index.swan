<view class="picture-container picture-container-class {{theme}}-container">
    <view class="picture-area picture-area-class">
        <view class="picture-item picture-item-class" s-for="item, index in pictureList">
            <view class="close close-class" 
                bindtap="delHdl" 
                data-index="{{index}}"/>
            <image src="{{item}}"
                bindtap="viewHdl"
                data-index="{{index}}"
                bindload="loadHdl"
                mode="{{modeList[index]}}"/>
            <view s-if="typeList[index]" class="tips tips-class">
                {{typeList[index]}}
            </view>
        </view>
        <view s-if="pictureList.length < pictureLimit" 
            class="add-picture picture-item add-picture-class" 
            bindtap="addHdl">
            <view class="add-icon"></view>
        </view>
    </view>
    <view s-if="{{showTips}}" class="tips-area tips-area-class">
        <text>
            支持最多{{pictureLimit}}张图片，单张体积{{pictureSizeLimit/1000000}}M以下
        </text>
    </view>
</view>
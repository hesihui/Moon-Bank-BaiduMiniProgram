<view
    class="
        check-box-item
        check-box-class
        {{checked ? 'checked' : ''}}
        {{column == 2 ? 'two-column' : ''}}
        {{disabled ? 'disabled' : ''}}
    "
    data-value="{{value}}"
    style="{{itemStyle}}"
    catch:tap="clkHdl"
>
    <gov-icon
        s-if="checked && !disabled"
        class="check-box-item-icon"
        name="{{iconStyle.name}}"
        color="{{iconStyle.color}}"
        size="{{iconStyle.size}}"
    />
    <view class="check-box-item-text">
        <slot></slot>
        <view class="desc">
            <slot name="desc"></slot>
        </view>
    </view>
</view>

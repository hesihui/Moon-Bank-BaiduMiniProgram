<view class="gradient-collapse gradient-collapse-class">
    <view class="gradient-content gradient-content-class" style="height:{{height}}">
        <view s-if="!currentExpand && isFadeOut" class="gradient"></view>
        <slot></slot>
    </view>
    <view
        s-if="showButton"
        bind:tap="btnClick"
        class="
            gradient-collapse-btn
            gradient-collapse-btn-class
            {{currentExpand ? 'expand' : ''}}
            ">
        <text
            class="gradient-collapse-btn-text gradient-collapse-btn-text-class">
            {{buttonText[currentExpand ? 1 : 0]}}
        </text>
        <gov-icon
            name="arrow-{{currentExpand ? 'up' : 'down'}}-o"
            color="{{iconColor}}"
            size="{{iconSize}}"
        >
        </gov-icon>
    </view>
</view>
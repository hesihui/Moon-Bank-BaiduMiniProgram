<view class="list-container smt-list-container smt-flex-box smt-border-bottom-retain-inner {{disable ? 'smt-hover-class' : ''}} {{isIos ? '' : 'android'}}">
    <view class="left-box" s-if="imgSrc">
        <smt-image-item 
            image-src="{{imgSrc}}"
            border-radius="5.435"
            image-width="47.101"
            image-height="47.101"
        ></smt-image-item>
    </view>
    <view class="middle-box">
        <view s-if="title" class="title smt-title smt-line-clamp-2">{{title}}</view>
        <view s-if="subTitle" class="sub-title smt-sub-title smt-line-clamp-2">{{subTitle}}</view>
    </view>
    <view s-if="desc" class="right-box smt-desc smt-line-clamp-1">{{desc}}</view>
    <view class="arrow-box">
        <smt-icon name="arrow-right-o" color="#ccc"></smt-icon>
    </view>
</view>
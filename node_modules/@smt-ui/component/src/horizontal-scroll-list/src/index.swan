<view class="horizontal-scroll-list-container" s-if="styles.length">
    <!-- 标题浮层 -->
    <view class="horizontal-scroll-mask">
        <view 
            s-for="{{titleList}}"
            class="title left-title content-item smt-left-title {{isIcon ? 'icon' : ''}} {{isIos ? '' : 'android'}} {{styles[index].line === 2 ? 'line-2' : ''}}"
            style="{{index === titleList.length - 1  ? lastTableStyle : ''}}"
        >
            <view class="smt-line-clamp-2 text">{{item}}</view>
            <view 
                s-if="{{styles[index].icon}}"
                class="detail-icon"
                data-info="{{item}}"
                bind:tap="showModal"
            >
                <smt-gov-icon
                    name="message-o"
                    size="16px"
                    color="{{iconColor}}"
                >
                </smt-gov-icon>
            </view>
        </view>
    </view>
    <!-- 滚动内容区 -->
    <scroll-view
        class="scroll-view-container"
        scroll-x
        bind:scrolltolower="lower"
        bind:scrolltoupper="upper"
    >
        <view class="scroll-view-content">
            <!-- 重复标题浮层，占位使用 -->
            <view class="horizontal-scroll-mask-placeholder">
                <view 
                    s-for="{{titleList}}"
                    class="title left-title content-item {{isIcon ? 'icon' : ''}} {{isIos ? '' : 'android'}} {{styles[index].line === 2 ? 'line-2' : ''}}"
                    style="{{index === titleList.length - 1  ? lastTableStyle : ''}}"
                >
                    <view class="smt-line-clamp-2 text">{{item}}</view>
                </view>
            </view>
            <view
                s-for="{{contentList}}"
                class="scroll-item"
            >
                <view
                    s-for="v, i in item"
                    class="content-item {{isIos ? '' : 'android'}} {{styles[i].line === 2 ? 'line-2' : ''}} {{i ? 'smt-content-item' : 'smt-top-title'}}"
                    style="{{i === item.length - 1  ? lastTableStyle : ''}}"
                >
                    <view class="smt-line-clamp-2 text">{{v}}</view>
                </view>
            </view>
        </view>
    </scroll-view>
    <!-- ios 右侧弹性滑动时延长下边线 -->
    <view s-if="isIos" class="last-line-wrap">
        <view 
            s-for="{{contentList[0]}}"
            class="{{isIos ? '' : 'android'}} content-item last-line {{styles[index].line === 2 ? 'line-2' : ''}}"
        ></view>
    </view>
</view>
<view class="{{isIos ? 'ios-voice-box' : ''}}">
    <view 
        class="mark smt-mark {{showPanel ? 'show-mark' : ''}}"
        bind:tap="cancel"
        bind:touchmove.stop="touchmove"
    ></view>
    <view
        s-if="showPanel"
        class="voice-panel smt-voice-panel {{isFullScreen ? 'voice-panel-ipx' : ''}}"
        animation="{{animationData}}"
    >
        <view class="btn-close" bind:tap="cancel">
            <view class="icon-close"></view>
        </view>
        <!--预加载图片-->
        <view class="preloading">
            <image class="image" s-for="{{rippleGif}}" src="{{rippleGif[index]}}"></image>
        </view>
        <view class="panel-content smt-flex-box">
            <view
                class="word-box smt-word-box {{delMargin ? 'no-margin-top' : ''}}"
                style="justify-content: {{verticalAlign}}"
            >
                <view s-if="msg">{{msg}}</view>
                <scroll-view class="result-cont" s-if="content" scroll-y style="height:auto;">{{content}}</scroll-view>
            </view>
            <view class="animate-box">
                <image class="image" src="{{rippleGif[showAnimate]}}"></image>
            </view>
            <view
                bind:tap="{{eventType}}"
                class="smt-btn-default smt-button-voice smt-line-clamp-1 smt-flex-center-box"
                hover-class="hover-class"
                style="background: {{buttonColor}}"
            >
                <view class="smt-flex-box">
                    <image class="btn-icon-img" src="{{iconVoice}}"></image>
                    <text>{{btnText}}</text>
                </view>
            </view>
        </view>
    </view>
</view>
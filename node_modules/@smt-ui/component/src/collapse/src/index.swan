<view class="collapse-container">
    <view 
        class="collapse-header smt-collapse-header smt-flex-box"
        bind:tap="spreadEvent"
    >
        <view class="header-content {{headerType === 'horizontal' ? 'smt-flex-box horizontal' : ''}}">
            <slot name="header">
                <view class="title smt-header-title">{{title}}</view>
                <view class="sub-title smt-header-sub-title">{{subTitle}}</view>
            <slot>
        </view>
        <view class="arrow">
            <smt-icon name="{{isSpread ? 'arrow-up-o' : 'arrow-down-o'}}" color="#ccc"></smt-icon>
        </view>
    </view>
    <view
        class="collapse-content {{headerBorder ? 'smt-border-bottom-retain-inner' : ''}} {{isIos ? '' : 'android'}}"
        style="height: {{isSpread ? contentHeight + 'px' : spreadHeight}}; {{time}}"
    >
        <view class="collapse-content-inner smt-content-box">
            <slot name="content">
                <view
                    s-for="{{list}}"
                    class="content-item smt-content-item smt-flex-box {{index !== list.length - 1 ? 'smt-border-bottom-retain-inner' : ''}} {{isIos ? '' : 'android-dark'}}"
                >
                    <view class="label">{{item.label}}</view>
                    <view class="content">{{item.content}}</view>
                </view>
            </slot>
        </view>
    </view>
</view>